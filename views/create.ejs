<%- include('template/header', {tituloPagina: 'Crear trabajador'}) %>
<body>
    <!--Navbar-->
    <%- include('template/navbar') %>

    <div class="container mt-4">
        <h1 class="text-center">Agregar trabajador</h1>
        <form action="/save" method="POST">
            <div class="form-group">
              <label for="campoNombre">Nombre</label>
              <input type="text" class="form-control" id="campoNombre" name="campoNombre" placeholder="Escribe tu nombre">
            </div>
            <div class="form-group">
                <label for="campoCargo">Cargo</label>
                <input type="text" class="form-control" id="campoCargo" name="campoCargo" placeholder="Escribe tu cargo">
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Crear</button>
                <a href="/" class="btn btn-secondary">Volver</a>
            </div>     
        </form>
    </div>

<%- include('template/footer') %>